<div class="page-header">
  <%= link_to new_calling_script_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Script
  <% end %>
  <h1>Scripts Available</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Topic</th>
	<th>Summary</th>
        <th></th>
	<td></td>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @calling_scripts) do |calling_script| %>
            <td><%= calling_script.topic %></td>
            <td><%= calling_script.summary %></td>
            <td>
	      <%= link_to calling_script, class: 'btn btn-primary' do %>
	      <span class="glyphicon glyphicon-phone"></span>
	      Call Now!
      <% end %>
</td>
<td>
  <% if can?(:edit, @calling_script) %>
    <%= link_to edit_calling_script_path(@calling_script), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <% end %>
</td>
      <% end %>
    </tbody>
  </table>
</div>
